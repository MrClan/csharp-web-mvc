@model ICollection<${SOLUTION_NAMESPACE}.Models.${entity.name}>
@{
	Layout = "~/Views/Shared/_Layout.cshtml";	
}

#set( $keyFields = $entity.getAttributesByCriteria( $const.KEY ) )

$env.setLanguage('C#')

<div class="container">
    <div class="container">
        <div id="authorPanel" class="panel-group">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3>
                        <span class="glyphicon glyphicon-leaf"></span> Author List
                        <a href="@Url.Action("Create", "${entity.name}s")">
                            <button type="button" class="btn btn-success pull-right">
                                <span class="glyphicon glyphicon-plus"></span> Create
                            </button>
                        </a>
                    </h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered text-center">
                        <thead>
                            <tr>
#foreach($attribute in $entity.nonKeyAttributes)
					<td>${attribute.formattedName(0)}</td>
#end
                </tr>
            </thead>
			<tbody>			
			@foreach(var ${fn.uncapitalize($entity.name)} in Model )
			{
                <tr>
#foreach($attribute in $entity.nonKeyAttributes)
					<td><a href="@Url.Action("Update", "$entity.name", new { id = @${fn.uncapitalize($entity.name)}.${attribute.formattedName(0)} })">@${fn.uncapitalize($entity.name)}.${attribute.formattedName(0)}</a></td>					
#end
					<td><a data-target="#@${fn.uncapitalize($entity.name)}.${attribute.formattedName(0)}" data-toggle="modal" href="@Url.Action("Delete", "${entity.name}s", new { id = ${fn.uncapitalize($entity.name)}.${attribute.formattedName(0)} })"><span class="glyphicon glyphicon-trash"></span></a></td>
                            </tr>
                        }      
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@foreach(var ${fn.uncapitalize($entity.name)} in Model)
{
<div id="@${fn.uncapitalize($entity.name)}.${attribute.formattedName(0)}" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-mask">
        <div class="modal-wrapper">
            <div class="container modal-container">
                <div class="panel-group">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <h3>Warning</h3>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this ${fn.uncapitalize($entity.name)} ?
                </div>
                <div class="modal-footer">
                    <div class="btn-toolbar">
                        @using (Html.BeginForm(actionName: "Delete", controllerName: "${entity.name}s", method: FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
							<input type="hidden" name="${attribute.formattedName(0)}" value="@${fn.uncapitalize($entity.name)}.${attribute.formattedName(0)}"/>
                            <button type="submit" name="" class="btn btn-success">
                                <span class="glyphicon glyphicon-trash"></span>
                                Yes
                            </button>
                            <button type="button" class="btn btn-danger pull-rigt" data-dismiss="modal">
                                No
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}